<script>
    function movercarrusel(direction) {
        const carrusel = document.getElementById('carrusel');
        const scrollAmount = 220;
        carrusel.scrollBy({
            left: direction * scrollAmount,
            behavior: 'smooth'
        });
     } 
</script>



